<?xml version="1.0" encoding="UTF-8"?>

<project name="Dunamis: Copy - Wordpress" basedir=".">
	
	<import file="../includes.xml" />
	
	<target name="dunamis_copy_to_wordpress" depends="dunamis_properties" if="copy.wordpress">
		
		<delete dir="${server.root}${dest}/${server.wordpress}wp-content/plugins/dunamis/" />
		<mkdir dir="${server.root}${dest}/${server.wordpress}wp-content/plugins/dunamis/" />
		
		<fileset dir="${dunamis.src.build}/" id="dunamis.corefiles">
			<include name="dunamis/**/*.*" />
			<include name="*.*" />
		</fileset>
		
		<fileset dir="${dunamis.src.build}/wordpress/" id="dunamis.wordpressfiles">
			<include name="**/*.*" />
		</fileset>
		
		<echo message="[1]  Copying Wordpress Specific Files" />
		<copy todir="${server.root}${dest}/${server.wordpress}wp-content/plugins/dunamis/"><fileset refid="dunamis.wordpressfiles" /></copy>
		
		<echo message="[2]  Copying Core Files" />
		<copy todir="${server.root}${dest}/${server.wordpress}wp-content/plugins/dunamis/framework/"><fileset refid="dunamis.corefiles" /></copy>
		
	</target>
	
</project>