<?xml version="1.0" encoding="UTF-8"?>

<project name="Dunamis: Packaging - Wordpress" basedir=".">
	
	<import file="../includes.xml" />
	
	<target name="dunamis_package_wordpress" depends="dunamis_properties" if="package.wordpress">
		
		<fileset dir="${dunamis.src.build}/" id="corefiles">
			<include name="dunamis/**/*.*" />
			<include name="*.*" />
		</fileset>
		
		<fileset dir="${dunamis.src.build}/wordpress/" id="wordpressfiles">
			<include name="**/*.*" />
		</fileset>
		
		<echo message="[1]  Creating Package Temporary Directory" />
		<mkdir dir="${dunamis.dst.package}/WORDPRESS" />
		<mkdir dir="${dunamis.dst.package}/WORDPRESS/dunamis" />
		
		<echo message=" " />
		<echo message="[2]  Copying Build to Temporary Directory" />
		<copy todir="${dunamis.dst.package}/WORDPRESS/dunamis/framework">
			<fileset refid="corefiles" />
		</copy>
		<copy todir="${dunamis.dst.package}/WORDPRESS/dunamis">
			<fileset refid="wordpressfiles" />
		</copy>
		
		<fileset dir="${dunamis.dst.package}/WORDPRESS" id="packagefiles">
			<include name="**/*.*" />
		</fileset>
		
		<echo message=" " />
		<echo message="[3]  Creating Package" />
		<dunamis.zipr_file srcid="packagefiles" dest="/" file="dunamis_wordpress_v${dunamis.project.VERSION}.zip" />
		
		<echo message=" " />
		<echo message="[4]  Delete Temporary Directory" />
		<delete dir="${dunamis.dst.package}/WORDPRESS" />
		
	</target>
	
</project>